<.flash_group flash={@flash} />

<section>
  <%!-- hero section --%>

  <div class="lg:flex-row flex justify-between gap-3 items-center flex-col-reverse p-6  w-full">
    <div>
      <h1 class="font-brand font-bold lg:text-5xl text-2xl text-center lg:text-left lg:mx-0 mx-6">
        Your Ultimate Resource for Exceptional
        Catering
        <strong class="border-[2px] border-white text-white rounded-[100%] px-3 py-2 border-opacity-100">
          Services
        </strong>
        Directory
      </h1>
      <p class="lg:text-left text-sm my-4 font-normal font-brand  lg:text-lg text-center lg:mx-0 mx-6">
        Explore our catering directory for the best caterers, dedicated to making your event exceptional with top-notch service and delicious cuisine.
      </p>
      <div class="flex justify-normal items-center gap-4 my-3">
        <div class="bg-emLight-dark px-4 py-3 shadow-sm shadow-white rounded-md">
          <i class="fa-brands fa-whatsapp text-2xl text-white"></i>
        </div>
        <div class="bg-emLight-dark px-4 py-3 shadow-sm shadow-white rounded-md">
          <i class="fa-brands fa-facebook-f text-2xl text-white"></i>
        </div>
        <div class="bg-emLight-dark px-4 py-3 shadow-sm shadow-white rounded-md">
          <i class="fa-brands fa-instagram text-2xl  text-white"></i>
        </div>
        <div class="bg-emLight-dark px-4 py-3 shadow-sm shadow-white rounded-md">
          <i class="fa-brands fa-twitter text-2xl text-white"></i>
        </div>
        <div class="bg-emLight-dark px-4 py-3 shadow-sm shadow-white rounded-md">
          <i class="fa-brands fa-tiktok text-2xl text-white"></i>
        </div>
      </div>
    </div>
    <div>
      <img src="/images/hero_img.png" alt="img" />
    </div>
  </div>

  <%!-- cusines part in homepage --%>

  <div class="bg-emLight-dark text-white rounded-md font-bold font-brand items-center p-6">
    <div style="white-space:nowrap;" id="col">
      <div class="scrolling-col-nigeria">
        <button
          class={[
            " text-white text-lg",
            @cusine == "nigeria" &&
              "bg-emOrange-dark rounded-md px-2 py-3 shadow-slate-200 shadow-md"
          ]}
          type="button"
       phx-click='update_cusine' phx-value-cusine='nigeria'>
          Nigeria Cuisine
        </button>
      </div>
      <div class="scrolling-col-italian">
        <button class={[
          " text-white text-lg",
          @cusine == "italian" &&
            "bg-emOrange-dark rounded-md px-2 py-3 shadow-slate-200 shadow-md"
        ]}  phx-click='update_cusine' phx-value-cusine='italian'>
          Italian cuisine
        </button>
      </div>
      <div class="scrolling-col-chinese">
        <button class={[
          " text-white text-lg",
          @cusine == "chinese" &&
            "bg-emOrange-dark rounded-md px-2 py-3 shadow-slate-200 shadow-md"
        ]}>
          Chinese Cuisine
        </button>
      </div>

      <div class="scrolling-col-japanese">
        <button class={[
          " text-white text-lg",
          @cusine == "japanese" &&
            "bg-emOrange-dark rounded-md px-2 py-3 shadow-slate-200 shadow-md"
        ]}>
          Japanese Cuisine
        </button>
      </div>
      <div class="scrolling-col-french">
        <button class={[
          " text-white text-lg",
          @cusine == "french" &&
            "bg-emOrange-dark rounded-md px-2 py-3 shadow-slate-200 shadow-md"
        ]}>
          French cuisine
        </button>
      </div>
      <div class="scrolling-col-indian">
        <button class={[
          " text-white text-lg",
          @cusine == "indian" &&
            "bg-emOrange-dark rounded-md px-2 py-3 shadow-slate-200 shadow-md"
        ]}>
          Indian Cuisine
        </button>
      </div>
      <div class="scrolling-col-american">
        <button class={[
          " text-white text-lg",
          @cusine == "american" &&
            "bg-emOrange-dark rounded-md px-2 py-3 shadow-slate-200 shadow-md"
        ]}>
          American Cuisine
        </button>
      </div>
      <div class="scrolling-col-ghanaian">
        <button class={[
          " text-white text-lg",
          @cusine == "ghanaian" &&
            "bg-emOrange-dark rounded-md px-2 py-3 shadow-slate-200 shadow-md"
        ]}>
          Ghanaian Cuisine
        </button>
      </div>
      <div class="scrolling-col-south">
        <button class={[
          " text-white text-lg",
          @cusine == "south" &&
            "bg-emOrange-dark rounded-md px-2 py-3 shadow-slate-200 shadow-md"
        ]}>
          South African Cuisine
        </button>
      </div>
    </div>
  </div>
 <%!-- the bottom aspect --%>
  <div>
    <%= case @cusine do %>
      <% "nigeria" -> %>
        <div>Nigeria food is here</div>
      <% "italian" -> %>
      <div>italian food is here</div>
      <% "under review" -> %>
        <p>more information</p>
      <% _ -> %>
        <p></p>
    <% end %></div>

